{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // 1. قسم سلسلة الاتصال الجديد
  "ConnectionStrings": {
    // 2. اسم السلسلة (سنستخدم هذا الاسم في Program.cs)
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EshopDb;Trusted_Connection=True;MultipleActiveResultSets=true"

    // ملاحظة: السلسلة أعلاه تستخدم LocalDB، وهو خادم SQL Server محلي سهل الاستخدام للتطوير.
  },

  "JwtSettings": {
    // 1. المفتاح السري (Secret Key): يجب أن يكون طويلاً ومعقداً
    // استخدم سلسلة عشوائية لا تقل عن 32 حرفاً (يفضل أن تكون 64 حرفاً لتكون 256-bit)
    "Secret": "YOUR_VERY_LONG_AND_COMPLEX_SECRET_KEY_FOR_JWT_SIGNATURE_256_BITS_EXAMPLE_1234567890",

    // 2. الناشر (Issuer): عنوان الـ API الخاص بك (من يصدر التوكن)
    "Issuer": "https://localhost:7001", // <<<<<<< تأكد من تعديل المنفذ (Port) الخاص بك

    // 3. الجمهور (Audience): لمن هذا التوكن (من يمكنه استخدامه)
    "Audience": "https://localhost:7001" // يمكن أن يكون هو نفسه الناشر حالياً
  }



}



